#include<bits/stdc++.h>
#include<iostream>
using namespace std;


int main(){
	int n, k;
	cin>>n>>k;
	int a[n];
	double kita[n];
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
		kita[i] = ((double)a[i]+1)/2;
	}
	double kita_sum = 0.0;
	for(int i=0;i<k;i++){
		kita_sum += a[i];
	}
	double ans = kita_sum;
	for(int i=k;i<n;i++){
		kita_sum = kita_sum - kita[i-3] + kita[i];
		ans = max(kita_sum, ans);
	}
	printf("%.8f", ans/k);



	   return 0;
}
